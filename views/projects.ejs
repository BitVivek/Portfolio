<%- layout('layouts/boilerplate') %>

<!-- work project section starts -->
<section class="work" id="work">

    <h2 class="heading"><i class="fas fa-laptop-code"></i> Projects <span>Made</span></h2>

    <div class="box-container">
        <% for(let i = 0; i < 6; i++) { %>
        <div class="box tilt">
            <img draggable="false" src="<%=projects[i].image%>" alt="Project Image" />
            <div class="content">
                <div class="tag">
                    <h3><%=projects[i].name%> </h3>
                </div>
                <div class="desc">
                    <p><%=projects[i].desc%> </p>
                    <div class="btns">
                        <a href="<%=projects[i].links.view%>" class="btn" target="_blank"><i class="fas fa-eye"></i>
                            View</a>
                        <a href="<%=projects[i].links.code%>" class="btn" target="_blank">Code <i
                                class="fas fa-code"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

    </div>


</section> 
<!-- work project section ends -->


<!-- scroll top btn -->
<a href="#home" class="fas fa-angle-up" id="scroll-top"></a>
